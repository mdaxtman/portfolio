{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "env": {
    "browser": true,
    "mocha": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "class-methods-use-this": 0,
    "comma-dangle": ["error", "never"],
    "consistent-return": 0,
    "no-use-before-define": 0,
    "quotes": ["error", "double", {"allowTemplateLiterals": true}],
    "react/jsx-no-bind": 0,
    "react/prefer-stateless-function": 0
  },
  "plugins": [
    "react"
  ]
}
